{
  "compilerOptions": {
    "target": "ES2016",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "declaration": true,
    "outDir": "./dist/app",
    "declarationDir": "./dist/types",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@app-types/*": ["./src/types/*"],
      "@errors/*": ["./src/errors/*"],
      "@utils/*": ["./src/utils/*"]
    }
  },
  "include": ["src"]
}
